" Character Encoding.
set fileencodings=utf-8,ucs-bom,gb18030,gbk,gb2312,cp936
set termencoding=utf-8
set encoding=utf-8

" Vi compatible off.
set nocompatible

syntax on

" Show Line Number.
set nu
set number

" Highlight current line.
"set cul
"set cursorline

" Show brackets match.
set showmatch


set tabstop=4
set shiftwidth=4
set expandtab
set autoindent "Inherit indent from previous line.
set paste "Paste auto organize indents.
set listchars=tab:>-,trail:- "Show space or indent as dots and line.

" Ignore search capital or lowercase mandantery match.
set ignorecase smartcase
set hlsearch "HIGHlight search.